extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom

    h3 Blog Post Edit

  include ../partials/profilehead.pug

    .form-group.row
    a(href='/account/blogsettings') Blog Settings

  form(action='/account/blogedit', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='user', value=user.id)
    input(type='hidden', name='blogpost_id', value=_id)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='posttitle') Post Title
      .col-md-7
        input.form-control(type='text', name='blog.posttitle', id='posttitle')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='post') Post Content
      .col-md-7
        input.form-control(type='text', name='blog.post', id='post')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='location') Location
      .col-md-7
        input.form-control(type='text', name='location', id='location')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='postcat') Category
      .col-md-7
        input.form-control(type='text', name='postcat', id='postcat')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='posttags') Tags
      .col-md-7
        input.form-control(type='text', name='posttags', id='posttags')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-left(for='postdate') Date
      .col-md-7
        input.form-control(type='date', name='postdate', id='postdate')
    .form-group
      .offset-sm-3.col-md-7.pl-2
        button.btn.btn.btn-primary(type='submit')
          i.fas.fa-pencil-alt.fa-sm
          | Create post