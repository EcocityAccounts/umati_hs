extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
  include ../partials/profilehead.pug
  
  span INVENTORY - 
  a(href='/account/inventorysettings') Settings - 
  a(href='/account/createinventory') Add an item

    hr
    br

  - var userr = { id: user._id }
  - if (data.length)

  .card-columns
    each posts in data
       if posts.visibility != "none" 
           .card.bg-light
             .card-body.text-left
               p.card-text.strong #{posts.inventorytitle} 
               p.card-text.text-center - #{posts.location}
               p.card-text.text-center - #{posts.inventorytags}
               p.card-text.text-center - #{posts.post}
               br
               a.align-left(href='/account/inventory/'+posts._id) Edit
    hr 

