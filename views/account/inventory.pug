extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
  include ../partials/profilehead.pug
  
  span INVENTORY - 
  a(href='/account/inventorysettings') Settings - 
  a(href='/account/createinventory') Add an item

    hr
    br

  - var userr = { id: user._id }
  - if (data.length)
    each posts in data
        if posts.user == userr.id 
            strong #{posts.inventorytitle} - #{moment(posts.updatedAt).format('MMM Do h:mm:ss a')}  - #{posts.inventorycat}
            br
            div #{posts.post}  - #{posts.inventorytags}
            a(href='/account/inventory/'+posts._id) Edit

            hr 

