extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom

  include ../partials/profilehead.pug

  h2 Your Umati Transaction Records
 
    br
    br

    .container-fluid
      .row-fluid
        .span3

    - activity_list.sort(function(a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each item,index in activity_list
      if !(index % 2)

        //first section
        .row.align-items-center.how-it-works
            .col-2.text-center.bottom
                .circle #{moment(item.date).format('MMM Do')}
            .col-6
                h5 $#{item.amount} #{item.source} payment
                p #{item.comment}
        
        
        .row.timeline
            .col-2
                .corner.top-right
            .col-8
                hr
            .col-2
                .corner.left-bottom

      else
        .row.align-items-center.justify-content-end.how-it-works
            .col-6.text-right
                h5 $#{item.amount} #{item.source} payment
                p #{item.comment}
            .col-2.text-center.full
                .circle  #{moment(item.date).format('MMM Do')} 
        
        .row.timeline
            .col-2
                .corner.right-bottom
            .col-8
                hr
            .col-2
                .corner.top-left

    else
      li There are no recorded payments.
      hr