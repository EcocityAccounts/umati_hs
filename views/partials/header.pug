.navbar.navbar-light.fixed-top.navbar-expand-lg.bg-light
  .container
    img(src="/lion.png",border="0")
    a.navbar-brand(href='/')
      | &nbsp;UMATI BANK
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title === 'Home') ? 'active' : undefined)
          a.nav-link(href='/') Home
        li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
          a.nav-link(href='/contact') Contact
        if user
          li.nav-item(class=(title === 'Messages') ? 'active' : undefined)
            a.nav-link(href='/account/messages') Messages
        if (user && user.profile.group == "Ward Food Logistics")  
            a.nav-link(href='/account/elevatormanage') Logistics
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/login') Login
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-link(href='/signup') Create Account
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src="https://avatars.dicebear.com/api/human/" + user.profile.name +".svg")
              span= user.profile.name || user.email || user.id
              i.caret
            .dropdown-menu.multi-column
              .row
                .col-md-4
                  ul.dropdown-menu
                    li    
                      a(href="/logout")
                          img(src="/umati_creativefire_3birds.png", border="0", height="110", alt="Log out")

                .col-md-4
                  ul.dropdown-menu                  
                    li
                      a(href='/account/payment') Receipts
                    li
                      a(href='/account/business') Business
                    li
                      a(href='/account/inventory') Inventory
                    li
                      a(href='/account/pos') POS
                    li
                    if (user.profile.group == "Ward Food Logistics")  
                      a(href='/account/elevator') Food Panel
                    else 
                      a(href='/account/elevator') Podcast
                      
                .col-md-4
                  ul.dropdown-menu
                    li
                      a(href='/account/') Profile
                    li
                      a(href='/account/group') Group
                    li
                      a(href='/account/cal') Calendar
                    li
                      a(href='/account/blog') Blog
                    li
                      a(href='/logout') >>Logout
